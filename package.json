    "@types/jest": "^29.4.0",
    "ethers5": "npm:ethers@^5.6.8",
    "ethers6": "npm:ethers@^6.0.8",
    "jest": "^29.4.3",
    "lerna": "^6.5.1",
    "nlfurniss-typedoc-plugin-sourcefile-url": "^2.0.0",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.23.12",
    "typedoc-plugin-extras": "^2.2.1",
    "typescript": "^4.4.4"
  }
}